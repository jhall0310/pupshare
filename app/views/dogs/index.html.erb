<script src="//maps.google.com/maps/api/js?key="ENV['GOOGLE_API']""></script>

<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

<div class="projects-clean">
    <div class="container">
      <h2 class="text-center">Our Dogs</h2>
      <div class="col-xs-offset-1 col-xs-10" id="map" style='height: 400px;'></div>
        <div class="intro">
            <p class="text-center">Nunc luctus in metus eget fringilla. Aliquam sed justo ligula. Vestibulum nibh erat, pellentesque ut laoreet vitae. </p>
        </div>
        <div class="row projects">
            <% @dogs.each do |dog| %>
            <div class="col-lg-4 col-sm-6 item"><%= image_tag(dog.image, class: "img-responsive")%>
                <h3 class="name"><%=link_to dog.name, owner_dog_path(dog.owner, dog) %></h3>
                <p class="description"><%= dog.description %></p>
                <% if current_sitter != nil %>
                <%= link_to "rent dog",  new_dog_rental_path(dog) %>
                <% end %>
                <br>
            </div>
            <% end %>
        </div>
        <br>
        <hr>
        <%= link_to "Back", :back %>
    </div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
  markers = handler.addMarkers(<%=raw @hash.to_json %>);
  handler.bounds.extendWith(markers);
  handler.fitMapToBounds();
});
</script>
