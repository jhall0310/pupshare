<div class="container">
<h1>Edit Your Pup</h1>
<%= form_for @dog do |f| %>
<%= f.text_field :name, placeholder: "Name", class: "form-control" %></br>
<%= f.text_area :description, placeholder: "Description", class: "form-control" %></br>
<%= f.file_field :image, placeholder: "Image" %>
<br>
<%= f.submit "Update", class:"btn btn-primary"%>
<% end %>
</div>
